@{
    ViewData["Title"] = "User Add";
    ViewBag.AUser = @"nav-active";
    Layout = "_LayoutHome";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
}

@section Scripts {
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script type="text/javascript" src="/Panel/vendor/bootstrap-maxlength/bootstrap-maxlength.js"></script>

    <script type="module" src="/Ajax/User/User.js" asp-append-version="true"></script>
    <script type="module" src="/Ajax/User/UserAdd.js" asp-append-version="true"></script>
}


<div class="container">
    <form class="card card-modern mt-5" id="CreateForm">
        <div class="card-header border-bottom">
            <div class="font-weight-bold">Kayıt Formu</div>
        </div>
        <div class="card-body pt-4">

            <div class="row">

                <div class="col-lg-6">
                    @* start: Name *@
                    <div class="mb-3">
                        <label for="Name">Name<b class="text-danger">*</b></label>
                        <input type="text" id="Name" class="form-control" data-plugin-maxlength maxlength="50" required />
                    </div>
                    @* end *@
                </div>

                <div class="col-lg-6">
                    @* start: Surname *@
                    <div class="mb-3">
                        <label for="Surname">Surname<b class="text-danger">*</b></label>
                        <input type="text" id="Surname" class="form-control" data-plugin-maxlength maxlength="50" required />
                    </div>
                    @* end *@
                </div>

                <div class="col-lg-6">
                    @* start: UserName *@
                    <div class="mb-3">
                        <label for="UserName">Username<b class="text-danger">*</b></label>
                        <input type="text" id="UserName" class="form-control" data-plugin-maxlength maxlength="50" required />
                    </div>
                    @* end *@
                </div>

                <div class="col-lg-6">
                    @* start: Email *@
                    <div class="mb-3">
                        <label for="Email">Email <b class="text-danger">*</b></label>
                        <input type="email" id="Email" class="form-control" data-plugin-maxlength maxlength="255" required />
                    </div>
                    @* end *@
                </div>

                <div class="col-lg-6">
                    @* start: Phone *@
                    <div class="mb-3">
                        <label for="Phone">Phone <b class="text-danger">*</b></label>
                        <input type="text" id="Phone" class="form-control phone-mask" required />
                    </div>
                    @* end *@
                </div>

                <div class="col-lg-6">
                    @* start: password *@
                    <div class="mb-3">
                        <label for="Password">Password <b class="text-danger">*</b></label>
                        <input type="text" id="Password" class="form-control" data-plugin-maxlength maxlength="50" required />
                    </div>
                    @* end *@
                </div>
                <div class="col-lg-6">
                    @* start: ConfirmPassword *@
                    <div class="mb-3">
                        <label for="ConfirmPassword">Password Again<b class="text-danger">*</b></label>
                        <input type="text" id="ConfirmPassword" class="form-control populate" data-plugin-maxlength maxlength="50" required />
                    </div>
                    @* end *@
                </div>

                @*             <div class="col-lg-12">
                <div class="mb-3">
                <label for="Role">Authorization<b class="text-danger">*</b></label>
                <select id="Role" class="form-control">
                <option selected>Please Select</option>
                <option value="1">Admin</option>
                <option value="2">Category Admin</option>
                </select>
                </div>
                </div> *@


                <div class="col-md-6 Category-col" style="display:none">
                    @* start: CategoryId *@
                    <div class="mb-3">
                        <label for="CategoryId" class="form-label text-danger mb-0">Authorization to add Category content <b class="text-danger">*</b></label>
                        <select id="CategoryId" class="form-select" multiple data-placeholder="Choose one thing">
                        </select>
                    </div>
                    @* end *@
                </div>

            </div>


        </div>
        <div class="card-footer py-3">
            <button class="btn btn-primary" type="submit">
                Save <i class="fa-sharp fa-solid fa-plus ms-1"></i>
            </button>
        </div>
    </form>
</div>



