@model UserModelUpdate
@{
    ViewData["Title"] = "User Update";
    ViewBag.AUser = @"nav-active";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
}

@section Scripts {
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script type="text/javascript" src="/Panel/vendor/bootstrap-maxlength/bootstrap-maxlength.js"></script>

    <script type="module" src="/Ajax/User/User.js" asp-append-version="true"></script>
    <script type="module" src="/Ajax/User/UserUpdate.js" asp-append-version="true"></script>
}
<input id="userId" type="hidden" value="@Model.Id" />




<button onclick="history.back()" class="btn btn-dark mb-3">
    <i class="fa-solid fa-backward me-2"></i>Go Back
</button>

<form class="card card-modern" id="UpdateForm">
    <div class="card-header border-bottom">
        <div class="font-weight-bold">User Update Form</div>
    </div>
    <div class="card-body pt-4">

        <div class="row">
            <div class="col-lg-6">
                @* start: Name *@
                <div class="mb-3">
                    <label for="Name">Name<b class="text-danger">*</b></label>
                    <input type="text" value="@Model.Name" id="Name" class="form-control" data-plugin-maxlength maxlength="50" required />
                </div>
                @* end *@
            </div>
            <div class="col-lg-6">
                @* start: Name *@
                <div class="mb-3">
                    <label for="Name">Surname<b class="text-danger">*</b></label>
                    <input type="text" value="@Model.Surname" id="Surname" class="form-control" data-plugin-maxlength maxlength="50" required />
                </div>
                @* end *@
            </div>


            <div class="col-lg-6">
                @* start: UserName *@
                <div class="mb-3">
                    <label for="UserName">User Name<b class="text-danger">*</b></label>
                    <input type="text" value="@Model.UserName" id="UserName" class="form-control" data-plugin-maxlength maxlength="50" required />
                </div>
                @* end *@
            </div>

            <div class="col-lg-6">
                @* start: Email *@
                <div class="mb-3">
                    <label for="Email">Email <b class="text-danger">*</b></label>
                    <input type="email" value="@Model.Email" id="Email" class="form-control" data-plugin-maxlength maxlength="255" required />
                </div>
                @* end *@
            </div>

            <div class="col-lg-6">
                @* start: Phone *@
                <div class="mb-3">
                    <label for="Phone">Phone<b class="text-danger">*</b></label>
                    <input type="text" value="@Model.Phone" id="Phone" class="form-control phone-mask" required />
                </div>
                @* end *@
            </div>
            <div class="col-lg-6">
                @* start: CurrentPassword *@
                <div class="mb-3">
                    <label for="CurrentPassword">Old Password </label>
                    <input type="text" id="CurrentPassword" class="form-control" data-plugin-maxlength maxlength="50" />
                </div>
                @* end *@
            </div>
            <div class="col-lg-6">
                @* start: password *@
                <div class="mb-3">
                    <label for="Password">Password </label>
                    <input type="text" id="Password" class="form-control" data-plugin-maxlength maxlength="50" />
                </div>
                @* end *@
            </div>
            <div class="col-lg-6">
                @* start: ConfirmPassword *@
                <div class="mb-3">
                    <label for="ConfirmPassword">Password Again</label>
                    <input type="text" id="ConfirmPassword" class="form-control populate" data-plugin-maxlength maxlength="50" />
                </div>
                @* end *@
            </div>



            <div class="col-lg-6">
                @* start: Authorization *@
                <div class="mb-3">
                    <label for="Role">Authorization<b class="text-danger">*</b></label>
                    <select id="Role" class="form-control">
                        @if (Model.Role == 1)
                        {
                            <option value="1" selected>Admin</option>
                        }
                        else
                        {
                            <option value="1">Admin</option>
                        }


                        @if (Model.Role == 2)
                        {
                            <option value="2" selected>Category Admin</option>
                        }
                        else
                        {
                            <option value="2">Category Admin</option>
                        }
                    </select>
                </div>
                @* end *@
            </div>



        </div>




    </div>

    <div class="card-footer py-3">
        <button class="btn btn-primary" type="submit">
            Save <i class="fa-sharp fa-solid fa-save ms-1"></i>
        </button>
    </div>
</form>




